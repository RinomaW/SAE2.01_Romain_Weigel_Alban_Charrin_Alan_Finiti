<Window
    x:Class="MATINFO.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MATINFO"
        xmlns:model="clr-namespace:MATINFO.Model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="600"
    Height="600"
    MinWidth="600"
    MinHeight="700"
    mc:Ignorable="d">
    <Window.DataContext>
        <model:ApplicationData x:Name="applicationData"/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ListView Margin="10,10,75,300" d:ItemsSource="{Binding Path=LesCategorie}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Categorie" DisplayMemberBinding="{Binding Path=NomCategorie}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView  Grid.Column="1" Margin="10,10,75,300" d:ItemsSource="{Binding Path=LesAttribution}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Path=DateAttribution}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView
            Grid.Column="2"
            Margin="10,300,75,10"
            d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView
            Grid.Column="2"
            Height="275"
            Margin="10,10,75,300"
            VerticalAlignment="Top"
            d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn />
                </GridView>
            </ListView.View>
        </ListView>
        <Button
            Width="100"
            Height="25"
            Margin="10,0,0,225"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="Ajouter" Click="Button_Click" />
        <Button
            Width="100"
            Height="25"
            Margin="10,0,0,195"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="Modifier"
            RenderTransformOrigin="-0.208,-2.158" />
        <Button
            Width="100"
            Height="25"
            Margin="10,0,0,165"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="Supprimer" />

    </Grid>
</Window>
