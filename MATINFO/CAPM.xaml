            <Button Content="Attribution" Height="30"/>
            <Rectangle Height="15" Stroke="Black" Width="100"/>
            <Button Content="Personnel" Height="30"/>
            <Rectangle Height="15" Stroke="Black" Width="100"/>
            <Button Content="Matériel" Height="30" Click="Button_Click_1"/>
