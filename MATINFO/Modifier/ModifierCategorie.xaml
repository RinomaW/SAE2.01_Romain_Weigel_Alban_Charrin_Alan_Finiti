<Window x:Class="MATINFO.ModifierCategorie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:model="clr-namespace:MATINFO.Model"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MATINFO"
        mc:Ignorable="d"
        Title="ModifierCategorie" Height="650" Width="300" MinHeight=" 570" MinWidth="300" WindowStartupLocation="CenterScreen">
    

    <Window.DataContext>
        <model:ApplicationData x:Name="applicationData" />
    </Window.DataContext>
    <Grid>
        <ListView x:Name="lvModifierCategorie" ItemsSource="{Binding Path =LesCategories}" Margin="50,50,50,184" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=NomCategorie}" Header="Categorie"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Modifier" HorizontalAlignment="Center" Margin="0,0,0,42" Width="110" Click="Button_Click" Height="32" VerticalAlignment="Bottom">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
